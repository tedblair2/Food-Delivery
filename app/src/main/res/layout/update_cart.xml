<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:id="@+id/top">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_shopping_cart_24"
            android:id="@+id/icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Cart!"
            android:layout_marginTop="2dp"
            android:padding="0dp"
            android:fontFamily="@font/anektelugu_medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodname"
        android:text="Food name"
        android:padding="0dp"
        android:layout_below="@id/top"
        android:textAlignment="center"
        android:textSize="18sp"
        android:fontFamily="@font/anektelugu_regular"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodprice"
        android:text="Ksh.120"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_below="@id/foodname"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodprice"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:id="@+id/reduce"
            android:src="@drawable/baseline_remove_circle_24"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:id="@+id/counter"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:id="@+id/add"
            android:src="@drawable/baseline_add_circle_24"
            android:scaleType="centerCrop"/>
    </LinearLayout>
</RelativeLayout>